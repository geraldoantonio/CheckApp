$(function(){
  let $sendMailModal = $('#sendMailModal');

  // Setting email and name on Form
  $('#recipient-text-email').val('<%= @beneficiary.email %>');
  $('#recipient-id').val('<%= @beneficiary.id %>');
  $('h4.modal-title').text("<%= I18n.t('labels.send_message_to', name: @beneficiary.name) %>");

  // Shows Modal
  $sendMailModal.modal();

  // Set focus on 'Message Text' after modal is shown
  $sendMailModal.on('shown.bs.modal', function () {
    $('#subject-text').focus();
  })

  
  
});
