

<h1 class="page-header">
  <%= t('messages.listing', model: @accounts.model_name.human) %>
  <%= link_to t('buttons.new'), new_account_path, class:"pull-right btn btn-success" %>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= @accounts.model.human_attribute_name('bank') %></th>
      <th><%= @accounts.model.human_attribute_name('agency_code') %></th>
      <th><%= @accounts.model.human_attribute_name('number') %></th>
      <th width="100px"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.bank.bank_name %></td>
        <td><%= account.agency_code %></td>
        <td><%= account.number %></td>
        <td>
          <%= link_to edit_account_path(account), class: "btn btn-primary btn-sm" do %>          
            <span class="glyphicon glyphicon-pencil"></span>
          <% end -%>

          <%= link_to account, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: "btn btn-danger btn-sm" do %>          
            <span class="glyphicon glyphicon-trash"></span>
          <% end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
    <div class="text-center">
      <%= paginate @accounts %>
    </div>
</div>
