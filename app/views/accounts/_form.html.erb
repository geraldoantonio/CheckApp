<%= form_for(account) do |f| %>

  <% if account.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
           <% account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end -%>
      </ul>
    </div>
  <% end  %>
  
  
  <div class="col-md-6"> 


    <div class="form-group">
      <%= f.label :bank %>
      <%= f.collection_select :bank_id, Bank.order(:bank_name), :id, :bank_name, {}, { class: " form-control selectpicker" ,  "data-live-search" => "true"} %>
    </div>

    <div class="form-group">
      <%= f.label :agency_code %>
      <%= f.text_field :agency_code, class: "form-control", placeholder: "Códido da Agência"  %>
    </div>

    <div class="form-group">
      <%= f.label :number %>
      <%= f.text_field :number, class: "form-control", placeholder: "Número da Conta" %>
    </div>
    <div class="form-group">

  <%= link_to t('buttons.back'), accounts_path, class:"btn btn-success" %>
      <%= submit_tag t('buttons.save'), class:"btn btn-primary" %>
    </div>

</div>
<% end %>
