<%= form_for(holder) do |f| %>

  <% if holder.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
           <% holder.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end -%>
      </ul>
    </div>
  <% end  %>
  
  <div class="col-md-6"> 

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Nome do titular"  %>
    </div>

    <div class="form-group">
      <%= f.label :cpf %>
      <%= f.text_field :cpf, class: "form-control cpf", placeholder: "CPF"  %>
    </div>

    <div class="form-group">
      <%= f.label :cnpj %>
      <%= f.text_field :cnpj, class: "form-control cnpj", placeholder: "CNPJ"  %>
    </div>
    
    
    <%= f.fields_for :user do |user_form| %>
      <div class="form-group">
        <%= user_form.label :email %>
        <%= user_form.text_field :email, class: "form-control", placeholder: "Email"  %>
      </div>

      <div class="form-group">
        <%= user_form.label :password %>
        <%= user_form.password_field :password, class: "form-control", placeholder: "Senha"  %>
      </div>

      <div class="form-group">
        <%= user_form.label :password_confirmation %>
        <%= user_form.password_field :password_confirmation, class: "form-control", placeholder: "Confirme Senha"  %>
      </div>

    <% end %>

    <div class="form-group">
      <%= link_to t('buttons.back'), holders_path, class:"btn btn-success" %>
      <%= submit_tag t('buttons.save'), class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
