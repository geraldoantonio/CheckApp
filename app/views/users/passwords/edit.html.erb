
<div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><%= t('labels.change_your_password') %></h3>
        </div>
        <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.hidden_field :reset_password_token %>
                <fieldset>
                    <div class="form-group">                
                        <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control",placeholder:"Nova senha"  %>
                    </div>
                    <div class="form-group">                
                        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class:"form-control",placeholder:"Confirmar senha"  %>
                    </div>
                    <!-- Change this to a button or input when using this as a form -->
                    <%= f.submit t('labels.change_password') , class:"btn btn-lg btn-success btn-block" %>
                </fieldset>
              <% end %>
              <p><%= link_to t('labels.login'), new_user_session_path %></p>
              <p><%= link_to t('labels.sign_up'), new_user_registration_path %></p>
        </div>
    </div>
</div>

<%= render partial: 'users/shared/logo' %>
