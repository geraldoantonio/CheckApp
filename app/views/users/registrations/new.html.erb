    <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><%= t('labels.sign_up_here') %></h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <fieldset>
                    
                    <%= f.fields_for :holder do |holder_form| %>
                      <div class="form-group">
                          <%= holder_form.text_field :name, class:"form-control",placeholder:"Nome" %>
                      </div>
                      <div class="form-group">
                          <%= holder_form.text_field :cpf, class:"form-control cpf",placeholder:"CPF"  %>
                      </div>
                      <div class="form-group">
                          <%= holder_form.text_field :cnpj, class:"form-control cnpj",placeholder:"CNPJ"   %>
                      </div>
                    <% end %>

                    <div class="form-group">
                       <%= f.email_field :email, autofocus: true, class:"form-control",placeholder:"E-mail"  %>
                    </div>

                    <div class="form-group">
                       <%= f.password_field :password, autofocus: true, class:"form-control",placeholder:"Senha"  %>
                    </div>

                    <div class="form-group">
                       <%= f.password_field :password_confirmation, autofocus: true, class:"form-control",placeholder:"Confirmar Senha"  %>
                    </div>
                    
                    <!-- Change this to a button or input when using this as a form -->
                    <%= f.submit t('labels.sign_up'), class:"btn btn-lg btn-success btn-block" %>
                </fieldset>
              <% end %>
              <p><%= link_to t('labels.login'), new_user_session_path %></p>
        </div>
    </div>
</div>

<%= render partial: 'users/shared/logo' %>
