      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
           <% beneficiary.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end -%>
      </ul>
    </div>
  <% end  %>

  <div class="row">
    <div class="col-md-6"> 

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Nome" %>
    </div>

    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control", placeholder: "EndereÃ§o" %>
    </div>

    <div class="form-group">
      <%= f.label :phone_1 %>
