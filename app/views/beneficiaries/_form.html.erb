    </div>

    <div class="form-group">
      <%= f.label :phone_2 %>
      <%= f.text_field :phone_2, class: "form-control phone", placeholder: "(99)9999.9999" %>
    </div>
    
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>

      <div class="form-group">
        <%= link_to t('buttons.back'), beneficiaries_path, class:"btn btn-success" %>
        <%= submit_tag t('buttons.save'),  class:"btn btn-primary" %>
