<%= form_for(bank) do |f| %>

  <% if bank.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
           <% bank.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end -%>
      </ul>
    </div>
  <% end  %>

  <div class="row">
    <div class="col-md-6"> 

      <div class="form-group">
        <%= f.label :id %>
        <%= f.text_field :id, class: "form-control", placeholder: "NÃºmero do Banco" %>
      </div>

      <div class="form-group">
        <%= f.label :bank_name %>
        <%= f.text_field :bank_name, class: "form-control", placeholder: "Nome do Banco" %>
      </div>

      <div class="form-group">
        <%= link_to t('buttons.back'), banks_path, class:"btn btn-success" %>
        <%= submit_tag t('buttons.save'),  class:"btn btn-primary" %>
      </div>
    </div>
  </div>

<% end %>
