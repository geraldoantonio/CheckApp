<h1 class="page-header">
  <%= t('messages.show', model: @check.model_name.human) %>
</h1>



<div class="row">
  <div class="col-md-6">

    <div class="form-group">
      <label>Banco:</label>
      <%= @check.account.bank.bank_name %>
    </div>

    <div class="form-group">
      <label>Agencia:</label>
      <%= @check.account.agency_code %>
    </div>

    <div class="form-group">
      <label>Conta:</label>
      <%= @check.account.number %>
    </div>

    <div class="form-group">
      <label>Cheque:</label>
      <%= @check.number %>
    </div>

    <div class="form-group">
      <label>Valor:</label>
      <%= humanized_money_with_symbol @check.amount %>
    </div>
    <div class="form-group">
      <label>Descontar em:</label>
      <%= l @check.date_discount %>
    </div>

    <div class="form-group">
      <%= link_to t('buttons.back'), checks_path, class:"btn btn-success" %>
      <%= link_to t('buttons.edit'), edit_check_path(@check), class:"btn btn-primary" %>
    </div>
    
  </div>
</div>
