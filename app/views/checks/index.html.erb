<table class="table table-striped">
  <thead>
    <tr>
      <th><%= @checks.model.human_attribute_name('bank') %></th>
      <th><%= @checks.model.human_attribute_name('agency_code') %></th>
      <th><%= @checks.model.human_attribute_name('account') %></th>
      <th><%= @checks.model.human_attribute_name('number') %></th>
      <th><%= @checks.model.human_attribute_name('amount') %> (<%= currency_symbol %>)</th>
      <th><%= @checks.model.human_attribute_name('date_discount') %></th>
      <th><%= @checks.model.human_attribute_name('beneficiary') %></th>
      <th width="100px"></th>
    </tr>
  </thead>

  <tbody>
    <% @checks.each do |check| %>
      <tr>
        <td><%= check.account.bank.bank_name %></td>
        <td><%= check.account.agency_code %></td>
        <td><%= check.account.number %></td>
        <td><%= check.number %></td>
        <td><%= humanized_money_with_symbol check.amount %></td>
        <td><%= l check.date_discount %></td>
        <td><%= check.beneficiary.name %></td>
        <td>
          <%= link_to edit_check_path(check), class: "btn btn-primary btn-sm" do %>          
            <span class="glyphicon glyphicon-pencil"></span>
          <% end -%>

          <%= link_to check, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: "btn btn-danger btn-sm" do %>          
            <span class="glyphicon glyphicon-trash"></span>
          <% end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="row">
    <div class="text-center">
      <%= paginate @checks %>
    </div>
</div>
